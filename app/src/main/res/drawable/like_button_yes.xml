<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- 表示边框-->
            <stroke
                android:color="@color/purple_200"
                android:width="0.8dp"
                />
            <!-- 表示圆角弧度-->
            <corners android:radius="15dp"/>
            <!-- 表示内部填充色-->
            <solid android:color="@color/purple_200"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</selector>